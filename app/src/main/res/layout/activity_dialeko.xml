<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#E6E0E0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bebala.bebala.dialeko">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6E0E0"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"
            android:gravity="center_horizontal"
            android:text="Pilih Model Pembelajaran:"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#04B431"
            android:textSize="20.0sp" />


        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/GridLayout1"
            android:layout_marginTop="30dp"
            android:layout_width="325dp"
            android:layout_height="340dp"
            android:columnCount="4"
            android:rowCount="7"
            android:background="#FFFFFF"
            android:orientation="vertical"
            tools:context="com.inducesmile.gridlayouttutorial.MainActivity" >
            <Space
                android:layout_row="0"
                android:layout_column="0" />


            <android.support.v7.widget.AppCompatButton
                android:layout_marginLeft="8dp"
                android:id="@+id/button_satu"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="#04B431"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:onClick="sejarahlampungo"
                android:text="Sejarah Lampung"
                android:layout_row="1"
                android:layout_column="1" />

            <android.support.v7.widget.AppCompatButton
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/button_dua"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="#04B431"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:text="Aksara lampung"
                android:layout_row="1"
                android:layout_column="2" />


            <android.support.v7.widget.AppCompatButton
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:id="@+id/button_tiga"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="#04B431"
                android:textColor="#FFFFFF"
                android:textStyle="normal"
                android:textSize="20dp"
                android:text="BAHASA sehari-hari"
                android:layout_row="2"
                android:layout_column="1" />

            <android.support.v7.widget.AppCompatButton
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/button_empat"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="#04B431"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:text="Cerita Lampung"
                android:layout_row="2"
                android:layout_column="2" />



            <android.support.v7.widget.AppCompatButton
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:id="@+id/button_tujuh"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="#04B431"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:text="Pantun"
                android:layout_row="3"
                android:layout_column="1" />

            <android.support.v7.widget.AppCompatButton
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/button_delapan"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="#04B431"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:text="Kata Benda"
                android:layout_row="3"
                android:layout_column="2" />

        </GridLayout>
    </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
